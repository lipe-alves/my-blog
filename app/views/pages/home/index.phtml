function generate_summary(string $html): string
{
    $summary = strip_tags($html);
    $summary = remove_multiple_whitespaces($summary);
    $summary = remove_newlines($summary);

    if (strlen($summary) > 100) {
        $summary = substr($summary, 0, 100);
        $summary .= "...";
    }

    return $summary;
}